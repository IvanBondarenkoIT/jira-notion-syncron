[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .eggs,
    *.egg,
    .mypy_cache,
    .pytest_cache,
    .tox

# McCabe complexity
max-complexity = 10

# Docstring requirements
docstring-convention = google

per-file-ignores =
    __init__.py:F401,F403
    tests/*:S101,D103

